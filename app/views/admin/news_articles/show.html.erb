<h1>Delete News Article</h1>
<hr>
<label><h5>Title</h5></label>
<p class="form-control">
  <%= @news_article.name %>
</p>
<label><h5>Body</h5></label>
<p class="form-control">
  <%= @news_article.body %>
</p>

<div class="btnblock">
  <%= link_to "Back to News Articles", admin_news_articles_path, class: "btn btn-primary" %>
  <%= link_to "Edit News Article", edit_admin_news_article_path, class: "btn btn-primary deletebtn" %>
  <%= button_to "Delete News Article", admin_news_article_path, class: "btn btn-danger",
                method: :delete,
                data: { confirm: "Please confirm you want to delete this news article" } %>
</div>
