<%= form_for [:admin, @user] do |f| %>

  <%= render 'shared/form_errors', object: @user %>

  <div class="form-group">
    <label><h5><%= f.label :title %></h5></label>
    <%= f.text_field :title, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <label><h5><%= f.label :subtitle %></h5></label>
    <%= f.text_field :subtitle, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <label><h5><%= f.label :image %></h5></label><br>
    <%= f.file_field :image %>
  </div>
  
  <div class="form-group">
    <label><h5><%= f.label :body %></h5></label>
    <%= f.text_area :body, rows: 12, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <label><h5><%= f.label :email %></h5></label>
    <%= f.text_field :email, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <label><h5><%= f.label :linkedin %></h5></label>
    <%= f.text_field :linkedin, required: true, class: "form-control" %>
  </div>

  <%= f.submit 'Submit', class: 'btn btn-primary' %>

<% end %>