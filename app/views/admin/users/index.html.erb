<h1>Users</h1>
<hr>
<h5>Create a<%= link_to "new", new_admin_user_path, class: "px-2" %>user</h5>
<br>
<table class="table table-sm">
  <% @users.each do |user| %>
    <tr>
      <td><h5 class="pt-2"><%= user.title %></h5></td>
      <td><%= link_to "edit", edit_admin_user_path(user), class: 'btn btn-primary' %></td>
      <td><%= link_to "delete", admin_user_path(user), data: {confirm: "Deleting User! Are you sure?"}, method: :delete, class: 'btn btn-primary' %></td>
    </tr>
  <% end %>
</table>
<%= paginate @users %>