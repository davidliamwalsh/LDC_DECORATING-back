<%= form_for [:admin, @careers_item] do |f| %>

  <%= render 'shared/form_errors', object: @careers_item %>

  <div class="form-group">
    <label><h5><%= f.label :title %></h5></label>
    <%= f.text_field :title, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <label><h5><%= f.label :job_description %></h5></label>
    <%= f.text_area :job_description, rows: 4, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <label><h5><%= f.label :job_type %></h5></label>
    <%= f.text_field :job_type, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <label><h5><%= f.label :experience %></h5></label>
    <%= f.text_field :experience, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <label><h5><%= f.label :location %></h5></label>
    <%= f.text_field :location, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <label><h5><%= f.label :drivers_license %></h5></label>
    <%= f.text_field :drivers_license, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <label><h5><%= f.label :language %></h5></label>
    <%= f.text_field :language, required: true, class: "form-control" %>
  </div>

  <%= f.submit 'Submit', class: 'btn btn-primary' %>

<% end %>